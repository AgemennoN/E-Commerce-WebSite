
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMainPage.cshtml";
}


<div class="w3l_banner_nav_right">
    <!-- products-breadcrumb -->
    <div class="products-breadcrumb">
        <div class="container">
            <ul>
                <li><i class="fa fa-home" aria-hidden="true"></i><a href="~/Home">Ana Sayfa</a><span>|</span></li>
                <li>Ödeme Sayfası</li>
            </ul>
        </div>
    </div>
    <!-- //products-breadcrumb -->
    <!-- payment -->
    <div class="privacy about">
        <h3>Ödeme Sayfası</h3>
        @if (Session["User"] != null)
        {
            <div class="checkout-right">
                <!--Horizontal Tab-->
                <div id="parentHorizontalTab">
                    <div class="resp-tabs-container hor_1">
                        <div>
                            <div id="tab4" class="tab-grid" style="display: block;">

                                <div class="row">
                                    <div class="col-md-12">
                                        @using (Html.BeginForm("AddPayment", "Payment", FormMethod.Post))
                                        {
                                            <div class="col-md-6">
                                                <div class="information-wrapper">
                                                    <div class="first-row form-group">
                                                        <div class="controls">
                                                            <div class="form-group">
                                                                <label class="control-label">Ad Soyad </label>
                                                                <input class="billing-address-name form-control" type="text" name="NameSurname" placeholder="Ad Soyad" value="" required>
                                                            </div>
                                                            <div class="w3_agileits_card_number_grids">
                                                                <div class="w3_agileits_card_number_grid_left">
                                                                    <div class="form-group">
                                                                        <label class="control-label">Telefon Numarası</label>
                                                                        <input class="form-control" type="text" placeholder="Telefon Numarası" name="PhoneNumber" value="" required>
                                                                    </div>
                                                                </div>
                                                                <div class="w3_agileits_card_number_grid_right">
                                                                    <div class="form-group">
                                                                        <label class="control-label">Adres </label>
                                                                        <input class="form-control" type="text" name="Adress" placeholder="Adres" value="" required>
                                                                    </div>
                                                                </div>
                                                                <div class="clear"> </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label class="control-label">Şehir </label>
                                                                <input class="form-control" type="text" name="City" placeholder="Şehir" required>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="clearfix">
                                                    <div class="form-group form-group-cc-number">
                                                        <label>Kart Numarası</label>
                                                        <input class="form-control" placeholder="xxxx xxxx xxxx xxxx" type="text" required><span class="cc-card-icon"></span>
                                                    </div>
                                                    <div class="form-group form-group-cc-cvc">
                                                        <label>CVV</label>
                                                        <input class="form-control" placeholder="xxxx" type="text">
                                                    </div>
                                                </div>
                                                <div class="clearfix">
                                                    <div class="form-group form-group-cc-name">
                                                        <label>Kart Sahibinin Adı</label>
                                                        <input class="form-control" type="text">
                                                    </div>
                                                    <div class="form-group form-group-cc-date">
                                                        <label>Son Kullanım Tarihi</label>
                                                        <input class="form-control" placeholder="mm/yy" type="text">
                                                    </div>
                                                </div>
                                                <input class="btn btn-primary" type="submit" value="Ödemeyi Tamamla">
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger bg-danger mt-5" style="color:white">
                <h1> Aradığınız Sayfa Bulunamadı... <br /> Geçersiz Sayfa veya Kullanıcı İsteği...</h1>
            </div>
        }
    </div>
</div>

<div class="clearfix"></div>

